<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.example.lokesh.bloodline.register">


    <EditText
        android:id="@+id/registerpagename"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/act_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/registerpagename"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/registerpagepassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:drawableStart="@drawable/act_name"/>

    <EditText
        android:id="@+id/registerpagepassword"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/registerpagepassword"
        android:drawableLeft="@drawable/ic_action_name"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/registerpageage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerpagename" android:drawableStart="@drawable/ic_action_name"/>

    <EditText
        android:id="@+id/registerpageage"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/registerpageage"
        android:drawableLeft="@drawable/act_age"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/registerpagecity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerpagepassword" android:drawableStart="@drawable/act_age"/>

    <EditText
        android:id="@+id/registerpagecity"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:drawableLeft="@drawable/act_city"
        android:hint="@string/registerpagecity"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/registerpagephone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerpageage" android:drawableStart="@drawable/act_city"/>

    <EditText
        android:id="@+id/registerpagephone"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/registerpagephone"
        android:drawableLeft="@drawable/act_phone"
        android:inputType="phone"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/registerpageemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerpagecity" android:drawableStart="@drawable/act_phone"/>

    <EditText
        android:id="@+id/registerpageemail"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/registerpageemail"
        android:drawableLeft="@drawable/act_email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/registerpagecheckbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerpagephone" android:drawableStart="@drawable/act_email"/>

    <CheckBox
        android:id="@+id/registerpagecheckbox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="5dp"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/registerpagecheckbox"
        android:textColorLink="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/registerpage_bloodgroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/registerpageemail" />

    <Button
        android:id="@+id/registerpageregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_button"
        android:hint="@string/registerpageregisterbutton"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/registerpageback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerpageuserid" />

    <Button
        android:id="@+id/registerpageback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="5dp"
        android:text="@string/registerpageback"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/registerpageregister"
        app:layout_constraintRight_toLeftOf="@id/registerpageregister"
        app:layout_constraintTop_toBottomOf="@+id/registerpageuserid" />

    <AutoCompleteTextView
        android:id="@+id/registerpageuserid"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/autocompletetextview"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/registerpageregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerpage_bloodgroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/registerpage_bloodgroup"
        app:layout_constraintRight_toLeftOf="@id/registerpagecheckbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerpageemail">

        <RadioButton
            android:id="@+id/registerpage_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MALE"
            android:textColorLink="@color/colorPrimary"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="376dp" />

        <RadioButton
            android:id="@+id/registerpage_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FEMALE"
            android:textColorLink="@color/colorPrimary"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="376dp" />
    </RadioGroup>


    <Spinner
        android:id="@+id/registerpage_bloodgroup"
        android:layout_width="207dp"
        android:layout_height="32dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/registerpageuserid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerpagecheckbox" />


</android.support.constraint.ConstraintLayout>
